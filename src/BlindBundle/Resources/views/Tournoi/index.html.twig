{% extends "base.html.twig" %}

{% block title %}BlindBundle:Tournoi:index{% endblock %}

{% block body %}
    <h1>Welcome to the Tournoi:index page</h1>
   
        <table border=4 width=80%>
        <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>La date</th>
        <th>Actions</th>
        </tr>
            {% for tournoi in lesTournois %}
            <tr>
                <td>{{ tournoi.id }}</td>
                <td>{{ tournoi.nom }}</td>
                <td>{{ tournoi.dateDebut|date('d-m-Y') }}</td>
                <td>
                    <a href="#" class="btn btn-primary btn-sm">Modifier</a>
                    <a href="{{ path('tournoi_delete', { id: tournoi.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
            </td>
            </tr>    
        {% endfor %}
    </table>
    </br>
{% endblock %}
