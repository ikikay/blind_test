{% extends "base.html.twig" %}

{% block title %}BlindBundle:Theme:index{% endblock %}

{% block body %}
    <h1>Welcome to the Theme:index page</h1>

    <table border=4 cellpadding=20>
        <tr>
        <th>ID</th>
        <th>Libelle</th>
        <th>Les Themes</th>
        <th>Actions</th>
        </tr>
            {% for theme in lesThemes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.libelle }}</td>
                <td>
                {% for tournoi in theme.tournois %}
                    {{ tournoi.nom }} </br>
                {% endfor %}        
                </td>
                <td>DEUX BOUTONS ICI</td>
            </tr>    
        {% endfor %}
    </table>
    </br>
{% endblock %}
